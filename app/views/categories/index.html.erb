<h1>Categories</h1>

<% @categories.each do |category| %>
  <div>
    <h3><%= category.name %></h3>
    <img src="<%= category.icon %>">
    <%# <p>Total Amount: <%= category.total_amount </p> %>
    <%= link_to "View Transactions", category_transactions_path(category) %>
  </div>
<% end %>

<%= link_to "Add a new category", new_category_path, class: "btn btn-primary" %>
