<section class="min-h-screen bg-gray-200 flex flex-col justify-between items-center w-full">
  <div class="w-full">
    <div class="h-12 bg-main w-full text-white flex justify-center items-end pb-2">
      <h1 class="font-bold">CATEGORIES</h1>
    </div>
    <div class="px-4 mt-2 h-full w-full overflow-scroll">
      <% @categories.each do |category| %>
        <a href="<%= category_transactions_path(category) %>" class="block">
          <div class="flex mt-5 bg-white gap-4 rounded-sm">
            <div class="h-20 p-2">
              <%= image_tag(category.icon, class: "h-full") %>
            </div>
            <div class="flex items-center w-4/6 justify-between">
              <h3><%= category.name %></h3>
              <p>Total Amount: <%= category.total_amount %> </p>
            </div>
          </div>
        </a>
      <% end %>
    </div>
  </div>
  <div class="bg-mygreen flex justify-center h-20 rounded-sm text-center w-full py-4 px-4 text-white">
    <div class="border border-2 border-white h-full w-full flex items-center justify-center">
      <%= link_to "Add a new category", new_category_path, class: "btn btn-primary" %>
    </div>
  </div>
</section>

