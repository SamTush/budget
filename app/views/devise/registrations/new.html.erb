<section class="h-screen bg-gray-200">
  <div class="h-16 bg-main text-white flex justify-center items-end pb-2">
    <h1 class="font-bold">SIGN UP</h1>
  </div>
  <div class="px-4 mt-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="flex flex-col gap-2">
        <%= f.text_field :full_name, autofocus: true, placeholder: "Full Name", class: "px-2 py-2" %>
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "px-2 py-2" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "px-2 py-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "px-2 py-2" %>
        <%= f.submit "Sign up", class: "border border-1 border-gray-300 py-2" %>
      </div>
    <% end %>
  </div>
</section>
